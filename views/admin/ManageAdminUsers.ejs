<html>
<head>
  <title>Party Management | Manage parties</title>
  <% include partials/css %>
</head>
<body class="with-side-menu-addl-full chrome-browser"> 
	<header class="site-header">
		<% include partials/head %>	    
	</header>
	<div class="mobile-menu-left-overlay"></div>
	<nav class="side-menu">
		<% include partials/sidebar %>
	</nav>
	<div class="page-content">
		<div class="container-fluid">
			<header class="section-header">
				<div class="tbl">
					<div class="tbl-row">
						<div class="tbl-cell">
							<h5>MANAGE ADMINS</h5>							
							<ol class="breadcrumb breadcrumb-simple">
								<li><a href="#">Home</a></li>
								<li class="active">Manage admins</li>								
							</ol>
							<div class="pull-right" style="margin-top:-6%;">
								<a href="/admin/AddNewAdmin" class="btn btn-primary"><i class="fa fa-plus"></i> Add new</a>
							</div>
						</div>
					</div>
				</div>				
			</header>
			<section class="card">
				<div class="card-block">																								
					<table id="example" class="display table table-bordered" cellspacing="0" width="100%" style="width: 100%;margin-top:1%;">
						<thead>
							<tr>
								<th class="sorting">Name</th>
								<th class="sorting_asc">Username</th>
								<th class="sorting">Email</th>
								<th class="sorting text-center">Actions</th>
							</tr>
						</thead>
						<tbody>
							<% for(var i=0;i<_au.length;i++){%>
								<tr>
									<td><%=_au[i].local.name %></td>
									<td><%=_au[i].local.username %></td>
									<td><%=_au[i].local.email%></td>
									<td class="text-center">
										<a href="/admin/EditAdminUserInfo/<%=_au[i]._id %>" title="Edit '<%=_au[i].local.username %>' Entry">
											<i class="fa fa-edit"></i>
										</a>&nbsp;|&nbsp;
										<a href="/admin/DeleteAdminUserInfo/<%=_au[i]._id %>" title="Delete '<%=_au[i].local.username %>' Entry">
											<i class="fa fa-remove"></i>
										</a>
									</td>									
								</tr>
							<%}%>
						</tbody>
					</table>																
				</div>
			</section>
		</div>
	</div>
	<% include partials/js %>	
	<script>
		$(function() {
			$('#example').DataTable({
				responsive: true
			});
		});
	</script>
</body>
</html>