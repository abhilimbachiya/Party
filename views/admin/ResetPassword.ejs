<html>
<head>
  <title>Party Management | Login</title>
  <link rel="stylesheet" href="/assets/admin/css/separate/pages/login.min.css" />
  <link rel="stylesheet" href="/assets/admin/css/lib/bootstrap/bootstrap.min.css" />
  <link rel="stylesheet" href="/assets/admin/css/lib/font-awesome/font-awesome.min.css" />
  <link rel="stylesheet" href="/assets/admin/css/main.css" />
</head>
<body>
  <div class="page-center">
        <div class="page-center-in">
            <div class="container-fluid">				
                <form class="sign-box" action="/admin/Change_or_reset_password" method="post">					
					<input type="hidden" name="user_id" id="user_id" value="<%=_user._id%>" />
                    <div class="sign-avatar">
                        <img src="/img/avatar-sign.png" alt="">
                    </div>
                    <header class="sign-title">Reset Password</header>
					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter New Password" required/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Re-type password" required/>
                    </div>                    
                    <button type="submit" class="btn btn-rounded">Reset</button>                    
                </form>
            </div>
        </div>
    </div>
	<script src="/assets/admin/js/lib/jquery/jquery.min.js"></script>
	<script src="/assets/admin/js/lib/tether/tether.min.js"></script>
	<script src="/assets/admin/js/lib/bootstrap/bootstrap.min.js"></script>
	<script src="/assets/admin/js/plugins.js"></script>
	<script type="text/javascript" src="/assets/admin/js/lib/match-height/jquery.matchHeight.min.js"></script>
	<script>
        $(function() {
            $('.page-center').matchHeight({
                target: $('html')
            });

            $(window).resize(function(){
                setTimeout(function(){
                    $('.page-center').matchHeight({ remove: true });
                    $('.page-center').matchHeight({
                        target: $('html')
                    });
                },100);
            });
        });
    </script>
	<script src="/assets/admin/js/app.js"></script>
</body>
</html>
